<h2><%= @list.name %></h2>

<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>


<p><strong>Bookmarks</strong></p>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <li>comment: <%= bookmark.comment %></li>
    <li><%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<br>

<%= link_to "Delete list", list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>

<br>

<%= link_to "Add a Bookmark", new_list_bookmark_path(@list) %>

<br>
<%= link_to "Back", root_path %>
