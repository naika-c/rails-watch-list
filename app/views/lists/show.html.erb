<h2><%= @list.name %></h2>

<li><%=  cl_image_tag list.photo.key, height: 300 width: 200 crop :fill %></li>
<%= link_to "Add a Bookmark", new_list_bookmark_path(@list) %>

<p><strong>Bookmarks</strong></p>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= bookmark.movie.title %></li>
    <li>comment: <%= bookmark.comment %></li>
    <li><%= link_to "Delete",
    bookmark_path(bookmark),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<br>

<%= link_to "Delete list", list_path(@list),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>

<br>
<%= link_to "Back", root_path %>
